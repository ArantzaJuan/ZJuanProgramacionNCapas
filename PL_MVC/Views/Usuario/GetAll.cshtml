@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de usiario</h2>
<div class="container">
    <p>Aqui puede ver, editar o agrgar a un Usuario</p>
    <p>Para agregar un Usuario presione el boton verde</p>
    <p>Para editar un Usuario presione el boton amarillo</p>
    <p>Para eliminar un Usuario presione el boton rojo</p>

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("+", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <hr />
    <div class="row">
        <table class="tablcenter table-hover table-bordered table-responsive ">

            <thead>
                <tr>
                    <th>Editar</th>
                    <th>Nombre</th>
                    <th>Sexo</th>
                    <th>Telefono</th>
                    <th>Correo electronico</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Password</th>
                    <th>Celular</th>
                    <th>CURP</th>
                    <th>UserName </th>
                    <th>Rol</th>
                    <th>Imagen</th>
                    <th>Direccion</th>

                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Usuario usuario in Model.Usuarios)
                {
                <tr>
                    <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"></a></td>
                    <td class="hidden">@usuario.IdUsuario</td>
                    <td>@usuario.Nombre @usuario.ApellidoPaterno @usuario.ApellidoMaterno</td>
                    <td> @usuario.Sexo</td>
                    <td> @usuario.Telefono</td>
                    <td> @usuario.Email</td>
                    <td> @usuario.FechaDeNacimiento</td>
                    <td> @usuario.Password</td>
                    <td> @usuario.Celular</td>
                    <td> @usuario.CURP</td>
                    <td> @usuario.UserName</td>
                    <td> @usuario.Rol.NombreRol</td>
                    @if (usuario.Imagen != null)
                    {
                        <td><img src="data:image/jpg;base64,@Convert.ToBase64String(usuario.Imagen)" style=" height:100px; width:100px; "/> </td>
                    }
                    else
                    {
                        <td><img src="~/Imagenes/userRosa.jpg" style=" height:100px; width:100px; " /></td>
                    }

                    <td> @usuario.Direccion.Calle, NumInterior: @usuario.Direccion.NumeroInterior,NumExterior @usuario.Direccion.NumeroExterior, @usuario.Direccion.Colonia.Nombre, @usuario.Direccion.Colonia.Municipio.Nombre, @usuario.Direccion.Colonia.Municipio.Estado.Nombre, @usuario.Direccion.Colonia.Municipio.Estado.Pais.Nombre</td>

                    <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                </tr>

                }
            </tbody>
        </table>
    </div>
</div>


